@model MVC_Entity_Framework.Models.Usuario

@{
    Layout = "~/Views/Shared/_Login.cshtml";
}

<h1>Ingresar</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Ingresar">            
            <div class="text-danger">@ViewBag.ErrorEnLogin</div>
            <div class="form-group">
                <label for="usuario" class="ontrol-label">Usuario</label>
                <input name="usuario" class="form-control" />
            </div>
            <div class="form-group">
                <label for="pass" class="control-label">Contraseña</label>
                <input name="pass" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Ingresar" class="btn btn-primary" />
                <a class="btn btn-success" asp-action="Registrarse">Registrarse</a>
            </div>
        </form>
    </div>
</div>
